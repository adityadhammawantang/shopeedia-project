<!doctype html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
	 crossorigin="anonymous">
	<link rel="stylesheet" href="dashboard.css" <!-- Image and text -->

</head>

<body>
	<nav class="navbar navbar-default bg-light" style="z-index:2">
		<div class="container-fluid">
			<a class="navbar-brand" href="/catalog">
				<img src="assets/logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
				Shopeedia
			</a>
			<% if (!currentUser) { %>
			<span class="navbar-text">
				<a href="/login">Login</a>
				<span>&nbsp;&nbsp;&nbsp;</span>
				<a href="/register">Sign Up</a>
			</span>
			<% } else { %>
			<span class="navbar-text">
				<% if (currentUser.username == "admin") { %>
				<a href="/dashboard"><strong>
						Dashboard</strong>
				</a>
				<% } else { %>
				<a href="/profile">
					Welcome, <strong>
						<%=currentUser.username%></strong>
				</a>
				<span>&nbsp;&nbsp;&nbsp;</span>
				<% } %>
				<% if (Array.isArray(currentUser.cart) && currentUser.cart.length ) { %>
				<a href="/checkout">
					<strong> Checkout </strong>
				</a>
				<% } %>
				<span>&nbsp;&nbsp;&nbsp;</span>
				<a href="/logout">Logout</a>
			</span>
			<% } %>
		</div>
	</nav>

	<div class="container-fluid col-md-10">
			<div class="row">
	
				<div class="container col-md-2">
					<br>
					<br>
					<a class="btn btn-primary" role="button" href="/catalog/add">+ Produk Baru</a>
					<br>
					<br>
					<a class="btn btn-primary" role="button" href="#">Ubah Produk</a>
				</div>
				<div class="container col-md-8">
					<br>
					<div class="card">
						<div class="card-header">
							Keranjang Belanja
						</div>
						<table>
							<tr>
								<th>
									Produk
								</th>
								<th>
									Kuantitas
								</th>
								<th></th>
							</tr>
							<% cart.forEach(function(cartItem){ %>
								<tr>
									<td>
										<%=cartItem.product%>
									</td>
									<td>
										<%=cartItem.quantity%>
									</td>
									<td>
									</td>
								</tr>
							<% }) %>
						</table>

					</div>
				</div>
			</div>
		</div>